<Window x:Class="HorionInjector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HorionInjector"
        mc:Ignorable="d"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Title="Solstice Injector" Height="300" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="#121212">

    <Window.Clip>
        <RectangleGeometry Rect="0,0,500,300" RadiusX="15" RadiusY="15"/>
    </Window.Clip>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation 
                        From="450" To="400"  Duration="00:00:0.5"
                        Storyboard.TargetProperty="(Window.Top)">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid MouseLeftButtonDown="DragWindow" Background="Transparent"/>

        <Image Visibility="Hidden" Source="console.png" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="top" Margin="0, 12, 35, 0" MouseLeftButtonUp="ConsoleButton_Click">
            <Image.Style>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.1" To="0.8" Storyboard.TargetProperty="(Image.Opacity)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.1" To="1" Storyboard.TargetProperty="(Image.Opacity)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>

        <Label
            Content="✕"
            FontWeight="ExtraBold" FontSize="20" Foreground="White"
            Height="30" Width="30" Padding="0" Margin="5"
            HorizontalAlignment="Right" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            MouseLeftButtonUp="CloseWindow">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Effect" Value="{x:Null}" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Red" ShadowDepth="0" BlurRadius="10" />
                                </Setter.Value>
                            </Setter>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="Coral" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="White" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <Image Source="horion-banner.png" Width="300" Margin="0, 0, 0, 80" />

        <Label
            x:Name="InjectButton"
            Content="Inject"
            FontFamily="Bahnschrift" FontWeight="Bold" FontSize="16"
            Background="#FF2E2E2E" Foreground="White" BorderThickness="0"
            Height="60" Width="250" RenderTransformOrigin="0.5 0.5"
            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            MouseLeftButtonUp="InjectButton_Left" MouseRightButtonUp="InjectButton_Right" >
            <Label.Clip>
                <RectangleGeometry Rect="0,0,250,60" RadiusX="10" RadiusY="10"></RectangleGeometry>
            </Label.Clip>
            <Label.RenderTransform>
                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1" />
            </Label.RenderTransform>
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Label">
                                <Border Background="#FF2E2E2E" CornerRadius="10">
                                    <Grid>
                                        <!-- Glow Layer -->
                                        <TextBlock Text="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">
                                            <TextBlock.Effect>
                                                <BlurEffect Radius="8" />
                                            </TextBlock.Effect>
                                            <TextBlock.OpacityMask>
                                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                    <GradientStop Color="Transparent" Offset="-0.3" x:Name="gs1"/>
                                                    <GradientStop Color="Black" Offset="-0.2" x:Name="gs2"/>
                                                    <GradientStop Color="Transparent" Offset="-0.1" x:Name="gs3"/>
                                                </LinearGradientBrush>
                                            </TextBlock.OpacityMask>
                                        </TextBlock>
                                        <!-- Top Text Layer -->
                                        <TextBlock Text="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <!-- Grow Animation -->
                                                    <DoubleAnimation Storyboard.TargetProperty="(Label.RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(Label.RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                            <BeginStoryboard Name="GlowWaveStoryboard">
                                                <Storyboard RepeatBehavior="Forever">
                                                    <!-- Glow Wave Animation -->
                                                    <DoubleAnimation Storyboard.TargetName="gs1" Storyboard.TargetProperty="Offset" To="1.1" Duration="0:0:1.2"/>
                                                    <DoubleAnimation Storyboard.TargetName="gs2" Storyboard.TargetProperty="Offset" To="1.2" Duration="0:0:1.2"/>
                                                    <DoubleAnimation Storyboard.TargetName="gs3" Storyboard.TargetProperty="Offset" To="1.3" Duration="0:0:1.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <!-- Shrink Animation -->
                                                    <DoubleAnimation Storyboard.TargetProperty="(Label.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="(Label.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                            <RemoveStoryboard BeginStoryboardName="GlowWaveStoryboard"/>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Label.Style>
        </Label>

        <Label Visibility="Hidden" FontFamily="Bahnschrift" x:Name="ConnectionStateLabel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,8" Click="GitHubLogo_Click" ToolTip="Open GitHub Profile">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid Background="Transparent">
                        <Path x:Name="LogoPath" Fill="White" Width="20" Height="20" Stretch="Uniform" Data="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="LogoPath" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="10" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5">
            <Label FontFamily="Bahnschrift" Foreground="White" x:Name="VersionLabel" VerticalAlignment="Bottom"/>
            <Label Margin="15,0,0,0" FontFamily="Bahnschrift" Foreground="White" Content="Delay (s):" VerticalAlignment="Bottom"/>
            <TextBox x:Name="DelayTextBox" Text="5" Width="30" Height="20" VerticalContentAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,2" Background="Black" Foreground="White" BorderBrush="Gray" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>
